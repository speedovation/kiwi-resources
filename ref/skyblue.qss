/* 播放列表滑块 */

QScrollBar:horizontal {
    background: transparent;
    height: 9px;
    margin: 0px, 0px, 0px, 0px;
    padding-left:   9px;            /*必须预留位置给箭头*/
    padding-right:    9px;
}

/* 水平滑块 */
QScrollBar::handle:horizontal {
    height: 9px;
    border-image:  url(./res/skin2/hbar0.gif);
    min-width:    20;
}
QScrollBar::handle:horizontal:hover{
    height: 9px;
    border-image:  url(./res/skin2/hbar1.gif);
    min-width:    20;
}
QScrollBar::handle:horizontal:pressed{
    height: 9px;
    border-image:  url(./res/skin2/hbar2.gif);
    min-width:    20;
}
/* 左箭头 */
QScrollBar::sub-line:horizontal{
    height:    9px;
    width:     9px;
    border-image:  url(./res/skin2/leftarrow0.gif);
    subcontrol-position:   left;
}
QScrollBar::sub-line:horizontal:hover{
    border-image:   url(./res/skin2/leftarrow1.gif);
}
QScrollBar::sub-line:horizontal:pressed{
    border-image:   url(./res/skin2/leftarrow2.gif);
}
/*右箭头*/
QScrollBar::add-line:horizontal{
    height:    9px;
    width:     9px;
    border-image:  url(./res/skin2/rightarrow0.gif);
    subcontrol-position:   right;
}
QScrollBar::add-line:horizontal:hover{
    border-image:   url(./res/skin2/rightarrow1.gif);
}
QScrollBar::add-line:horizontal:pressed{
    border-image:   url(./res/skin2/rightarrow2.gif);
}
/* 滚动槽 */
QScrollBar::add-page:horizontal, QScrollBar::sub-page:horizontal{
    border-image:   url(./res/skin2/hscrollbar_slot.bmp);
}
/*********** 竖直滑块 *********/
QScrollBar:vertical {
    background: transparent;
    width: 8px;
    margin: 0px, 0px, 0px, 0px;
    padding-top:   7px;            /*必须预留位置给箭头*/
    padding-bottom:    7px;
}

/* 滑块 */
QScrollBar::handle:vertical {
    width: 9px;
    border-image:  url(./res/skin2/bar0.gif);
    min-height:    20px;
   /* max-height:    25px;  不起作用！？！*/
}
/* 滑块悬停 */
QScrollBar::handle:vertical:hover{
    width: 8px;
    border-image:  url(./res/skin2/bar1.gif);
    min-height:    20;
}
QScrollBar::handle:vertical:pressed{
    width: 8px;
    border-image:  url(./res/skin2/bar2.gif);
    min-height:    20;
}

/* 下箭头 */
QScrollBar::add-line:vertical{
    height:    7px;
    width:     8px;
    border-image:  url(./res/skin2/downarrow0.gif);
    subcontrol-position:   bottom;
}
QScrollBar::add-line:vertical:hover{
    border-image:   url(./res/skin2/downarrow1.gif);
}
QScrollBar::add-line:vertical:pressed{
    border-image:   url(./res/skin2/downarrow2.gif);
}

/* 上箭头 */
QScrollBar::sub-line:vertical {
    height:    7px;
    width:     8px;
    border-image:  url(./res/skin2/uparrow0.gif);
    subcontrol-position:   top;
}
QScrollBar::sub-line:vertical:hover{
    border-image:   url(./res/skin2/uparrow1.gif);
}
QScrollBar::sub-line:vertical:pressed{
    border-image:   url(./res/skin2/uparrow2.gif);
}

/* 滚动槽 */
QScrollBar::add-page:vertical, QScrollBar::sub-page:vertical{
    border-image:   url(./res/skin2/scrollbar_slot.bmp);
}

/* 在QSplitter 上面的部件 *正常状态 ****************************/
QListWidget{
    background-color:   qlineargradient(x1:0, y1:0, x2:0, y2:1,
                        stop:0 #d5eaea, stop: 0.4 #d5efff, stop:1 #d5eaea);/*#272a46;*/

    font:   13px "Tahoma";
    color:  #1a80aa;
    border: 0px 0px 0px 0px;    /*边框不明显，可以不去掉*/
}

/* 分割条，怎么消掉残余的线条，本来就没有，只是QStackWidget当前page有个主部件 */
/* 然后主部件里面进行的布局，布局貌似是不能铺满窗口的！？！？*/
/* 解决办法就是一个page只使用一个部件，自动就不会有间隙的了*/
QSplitter#spliter::handle:horizontal{
    background-color:   qlineargradient(x1:0, y1:0, x2:1, y2:1,
                             stop:0 white, stop:1 #00ab9d)
}

/*列表里面的项目   悬停*/
QListWidget::item:hover{
    color:  white;              /*字体*/
    background-color: #064f87;
    border-radius:  3px;
    border: 1px solid white;
}

QSplitter{      /* 直接子部件*/
    background-color: #c5eaea;
}

/*被选择*/
QListWidget::item:selected{
    color:  #a50061;              /*字体*/
    background-color: #dff5f8;
}

/*被选择 + 悬停*/
QListWidget::item:selected:hover{
    color:  #66ff37;              /*字体*/
    background-color: #064f87;
}


/************** QTableWidget 歌曲列表 *************************/

/*表格里面*/
QTableWidget{
    font:   13px "Tahoma";
    color:  #1a80aa;
    background-color:   qlineargradient(x1:0, y1:0, x2:0, y2:1,
                            stop:0 #d5eaea, stop: 0.4 #d5efff, stop:1 #d5eaea);/*#272a46;*/
    border:     0px 0px 0px 0px;        /*去掉在分裂器周围的界限*/
}

/*表格的表头的每个头 */
QHeaderView::section:vertical{       /*表头里的每个标签*/
    font:   13px "Tahoma";
    color:  #1a80aa;
    /*background-color:    #373a56;*/
    background: transparent;
    border: 0px 0px 0px 0px;        /*本来是可以伸缩的，去掉之后就不会伸缩了*/
    margin: 0px 0px 0px 0px;
    padding:    2px 4px 2px 0px;    /*5px 为了拉开序列号与歌曲名之间距离，会影响表头设置的对齐方式*/
}
QHeaderView:vertical{
    background-color:   qlineargradient(x1:0, y1:0, x2:0, y2:1,
                        stop:0 #d5eaea, stop: 0.4 #d5efff, stop:1 #d5eaea);/*#272a46;*/

}
/*********** 网络音乐窗口的 treeWidget 水平表头 ************/
QHeaderView::section:horizontal{       /*表头里的每个标签*/
    font:   13px "Tahoma";
    color:  #1a80aa;
    background-color:   #2caaeb;
    border: 1px solid #24cdd8;
}

/*悬停 排除下载管理里面的*/
QStackedWidget#playListStackWidget QTableWidget::item:hover{
    color:  white;              /*字体*/
    background-color: #064f87;
    border-radius:  3px;
    border: 1px outset white;
}

/*被选择*/
QTableWidget::item:selected{
    color:  #a50061;              /*字体*/
    background-color: #dff5f8;
}

/*被选择 + 悬停，排除下载管理的tablewidget*/
QStackedWidget#playListStackWidget QTableWidget::item:selected:hover{
    color:  #66ff37;              /*字体*/
    background-color: #064f87;
}


