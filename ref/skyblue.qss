/******* 搜索输入编辑框 ********/
QLineEdit#browerLineEdit{
    background-color:   #2490a4;
    color:      #00fff0;
    border: 1px outset light solid ;
    border-radius:  3px;
}

/****** 音乐窗口里面的 treeWidget *******/
QTreeWidget{
    background-color:  qlineargradient(x1:0, y1:0, x2:0, y2:1,
                          stop:0 #45a1d0,  stop:1 #417c9a);
    color:  #00fff0;
    border: 1px inset #7d17f0 solid;
    border-radius:  3px;
    font:   12px "楷体";
}
QTreeWidget::item:selected{
    background-color:   #30566a;
    color:      #00ffea;
}

/******** 下载任务里面的进度条 *******/
QProgress{
margin:     5px;
    border: 2px solid grey;
    border-radius: 5px;
}
QProgressBar::chunk {
    background-color: #05B8CC;
    width: 10px;
    margin: 0.4px;
}

/************* 下载窗口内的工具栏 **************/
QToolBar{
    background-color:   #1f94c5;
    spacing:    5px;
    border-left: 1px inset #ceced0 solid;
    border-top: 1px inset #ceced0 solid;
    border-right: 1px outset #4c4855 solid;
    border-bottom: 1px outset #4c4855 solid;
    border-radius:  2px;
}

